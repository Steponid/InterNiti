<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.Add_new_userActivity"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/But_back_pg4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/orange" />

    <EditText
        android:id="@+id/Lname_us"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/shape_edit_text_pg"
        android:ems="10"
        android:fontFamily="@font/cost"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/cost"
        android:text="фамилия"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Lname_us"
        app:layout_constraintEnd_toEndOf="@+id/Lname_us"
        app:layout_constraintStart_toStartOf="@+id/Lname_us" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/cost"
        android:text="имя"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Fname_us"
        app:layout_constraintEnd_toEndOf="@+id/Fname_us"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Fname_us" />

    <EditText
        android:id="@+id/Fname_us"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/shape_edit_text_pg"
        android:ems="10"
        android:fontFamily="@font/cost"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button_add_pg3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lname_us"
        app:layout_constraintVertical_bias="0.008" />

    <Button
        android:id="@+id/button_add_pg3"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/cost"
        android:text="Добавить"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Pname_us"
        style="@style/editText"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fname_us" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="отчество"
        style="@style/text"
        app:layout_constraintBottom_toTopOf="@+id/Pname_us"
        app:layout_constraintEnd_toEndOf="@+id/Pname_us"
        app:layout_constraintStart_toStartOf="@+id/Pname_us" />

    <EditText
        android:id="@+id/Mail_us"
        style="@style/editText"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Pname_us" />

    <TextView
        android:id="@+id/textView14"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Почта"
        app:layout_constraintBottom_toTopOf="@+id/Mail_us"
        app:layout_constraintEnd_toEndOf="@+id/Mail_us"
        app:layout_constraintStart_toStartOf="@+id/Mail_us" />

    <EditText
        android:id="@+id/password_us"
        style="@style/editText"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mail_us" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="пароль"
        style="@style/text"
        app:layout_constraintBottom_toTopOf="@+id/password_us"
        app:layout_constraintEnd_toEndOf="@+id/password_us"
        app:layout_constraintStart_toStartOf="@+id/password_us" />

    <TextView
        android:id="@+id/ACESS_red"
        android:layout_width="84dp"
        android:layout_height="63dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_acess"
        android:fontFamily="@font/cost"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_us" />

    <ImageView
        android:id="@+id/up_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/ACESS_red"
        app:layout_constraintEnd_toStartOf="@+id/ACESS_red"
        app:layout_constraintTop_toTopOf="@+id/ACESS_red"
        app:srcCompat="@drawable/chevron_up" />

    <ImageView
        android:id="@+id/down_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/ACESS_red"
        app:layout_constraintStart_toEndOf="@+id/ACESS_red"
        app:layout_constraintTop_toTopOf="@+id/ACESS_red"
        app:srcCompat="@drawable/chevron_down" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="уровень доступа"
        android:textSize="25sp"
        style="@style/text"
        app:layout_constraintBottom_toTopOf="@+id/ACESS_red"
        app:layout_constraintEnd_toEndOf="@+id/ACESS_red"
        app:layout_constraintStart_toStartOf="@+id/ACESS_red" />

    <Button
        android:id="@+id/Button_us"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/darkBlue"
        android:fontFamily="@font/cost"
        android:text="отмена"
        android:textColor="@color/lightBlue"
        android:textSize="14sp"
        app:cornerRadius="12dp"
        app:icon="@drawable/otmen"
        app:iconTint="@color/lightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_add_pg3" />

</androidx.constraintlayout.widget.ConstraintLayout>